{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1>Connexion</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Votre email</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control">

            <label for="password">Votre mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control">

            <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

            <button class="btn btn-success my-3">Connexion</button>
        </form>

        <br>
        Vous n'avez pas un compte ? <a href="{{ path('app_register') }}"> Inscrivez-vous</a>
    </div>

{% endblock %}
